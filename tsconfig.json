{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": false,
    "types": ["node", "jest"],
    "lib": ["es5", "dom"],
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "pretty":true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
  ]
}